<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profile_imageItem"
        android:src="@drawable/iconavatar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:textColor="@color/black"
        android:id="@+id/usernameItem"
        android:layout_toRightOf="@id/profile_imageItem"
        android:layout_toEndOf="@id/profile_imageItem"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#05df29"
        android:id="@+id/img_on"
        android:visibility="gone"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@id/profile_imageItem"
        android:layout_toEndOf="@id/profile_imageItem"
        android:src="@mipmap/ic_launcher"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#bfbfbf"
        android:id="@+id/img_off"
        android:visibility="gone"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="-15dp"
        android:layout_toRightOf="@id/profile_imageItem"
        android:layout_toEndOf="@id/profile_imageItem"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_msg"
        android:layout_below="@id/usernameItem"
        android:layout_toRightOf="@id/profile_imageItem"
        android:layout_marginTop="11dp"
        android:textColor="#B8B3B3"
        android:layout_marginLeft="9dp"
        android:maxLines="1"
        />
</RelativeLayout>